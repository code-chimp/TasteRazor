@page
@model TasteRazor.Pages.Admin.Category.Upsert

<form method="post">
  <div class="container">
    <div class="row px-2 mx-2 backgroundWhite border">
      <div class="danger" asp-validation-summary="ModelOnly"></div>
      @if (Model.CategoryObj.Id != 0)
      {
        <input type="hidden" asp-for="CategoryObj.Id">
      }
      <div class="col-12 px-3" style="border-bottom:1px solid #325388">
        <h2 class="text-primary">@(Model.CategoryObj.Id != 0 ? "Update" : "Create") Category</h2>
      </div>

      <div class="col-8 pt-3">
        <div class="form-group row">
          <div class="col-3">
            <label asp-for="CategoryObj.Name"></label>
          </div>
          <div class="col-9">
            <input type="text" asp-for="CategoryObj.Name" class="form-control">
            <span class="text-danger" asp-validation-for="CategoryObj.Name"></span>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-3">
            <label asp-for="CategoryObj.DisplayOrder"></label>
          </div>
          <div class="col-9">
            <input type="text" asp-for="CategoryObj.DisplayOrder" class="form-control">
            <span class="text-danger" asp-validation-for="CategoryObj.DisplayOrder"></span>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-9 offset-3">
            <div class="row">
              <div class="col-6">
                <button class="btn btn-primary form-control" type="submit">
                  @(Model.CategoryObj.Id != 0 ? "Update" : "Create")
                </button>
              </div>
              <div class="col-6">
                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
